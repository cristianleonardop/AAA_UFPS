
<div class="flex-1 flex flex-col py-3 px-2 sm:px-1 lg:flex-none lg:px-10 xl:px-12 ">
  <div class="w-full max-w-sm lg:w-96">
    <div class="flex w-full ">
     
    </div>
    <div class="mt-8">
      <div class="mt-6">

        <%= form_with(model: subject, local: true) do |form| %>
          <% if @subject.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(subject.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
                <% user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

         <div class="field">
            <%= form.label :nombre, class: "block text-sm font-medium text-gray-700"  %>
            <%= form.text_field :name, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div class="field">
            <%= form.label :descripcion, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :description, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div class="actions mt-3">
            <%= form.submit "Registar", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
          <% unless @subject.new_record? %>
            <div class="actions mt-3">
              <%= link_to "Eliminar", @subject, method: :delete, class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
            </div>
          <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>
