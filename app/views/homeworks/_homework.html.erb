<div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
  <div class="flex-shrink-0">
    <div class="flex justify-center h-48 w-full object-cover bg-red-500 text-white items-center font-semibold text-2xl capitalize">
      <%= homework.subject.name %>
    </div>
  </div>
  <div class="flex-1 bg-white p-6 flex flex-col justify-between cursor-pointer" data-homework-id="<%= homework.id %>" data-reflex="click->Components::SlideOverReflex#open_slide_over">
    <div class="flex-1">
      <div class="block mt-2">
        <p class="text-xl font-semibold text-gray-900">
          <%= homework.name %>
        </p>
        <p class="text-sm font-normal text-gray-500">
          <%= homework.subject.name %>
        </p>
        <p class="mt-3 text-base text-gray-500">
          <%= homework.description %>
        </p>
      </div>
    </div>
    <div class="mt-6 flex items-center">
      <div class="flex-shrink-0">
        <a href="#">
          <span class="sr-only"><%= homework.student.name %></span>
          <img class="h-10 w-10 rounded-full" src="<%= homework.student.avatar? ? homework.student.avatar.thumb.url : 'https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=facearea&amp;facepad=4&amp;w=256&amp;h=256&amp;q=60'%>" alt="">
        </a>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-gray-900">
          <a href="#" class="hover:underline">
            <%= homework.student.name %>
          </a>
        </p>
        <div class="flex space-x-1 text-sm text-gray-500">
          <time datetime="2020-03-10">
            <%= homework.due_date %>
          </time>
          <span aria-hidden="true">
                  &middot;
                </span>
          <span>
                <%= number_to_currency(homework.price) %>
              </span>
        </div>
      </div>
    </div>
  </div>
</div>
